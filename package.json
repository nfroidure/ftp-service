{
  "metapak": {
    "data": {
      "files": "'src/**/*.ts'",
      "testsFiles": "'src/**/*.test.ts'",
      "distFiles": "'dist/**/*.js'",
      "ignore": [
        "dist"
      ],
      "bundleFiles": [
        "dist/**/*.js",
        "dist/index.d.ts",
        "dist",
        "src"
      ]
    },
    "configs": [
      "main",
      "readme",
      "eslint",
      "tsesm",
      "jest",
      "jsdocs",
      "jsarch",
      "codeclimate"
    ]
  },
  "name": "ftp-service",
  "version": "7.0.1",
  "type": "module",
  "description": "A simple wrapper for a simpler FTP client surface API with pool and retry management.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "architecture": "jsarch 'src/**/*.ts' > ARCHITECTURE.md && git add ARCHITECTURE.md",
    "build": "rimraf 'dist' && tsc --outDir dist",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "cli": "env NODE_ENV=${NODE_ENV:-cli}",
    "cover": "node --run jest -- --coverage",
    "cz": "env NODE_ENV=${NODE_ENV:-cli} git cz",
    "doc": "echo \"# API\" > API.md; jsdoc2md 'dist/**/*.js' >> API.md && git add API.md",
    "format": "node --run prettier",
    "jest": "NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest",
    "lint": "eslint 'src/**/*.ts'",
    "metapak": "metapak",
    "precz": "node --run build && node --run test && node --run lint && node --run architecture && node --run doc && node --run metapak -- -s",
    "prettier": "prettier --write 'src/**/*.ts'",
    "preversion": "node --run build && node --run test && node --run lint && node --run architecture && node --run doc && node --run metapak -- -s",
    "rebuild": "swc ./src -s -d dist -C jsc.target=es2022",
    "test": "node --run jest",
    "version": "node --run changelog"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nfroidure/ftp-service.git"
  },
  "keywords": [
    "ftp",
    "knifecycle"
  ],
  "author": {
    "name": "Nicolas Froidure",
    "email": "nicolas.froidure@insertafter.com",
    "url": "https://insertafter.com/en/index.html"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nfroidure/ftp-service/issues"
  },
  "homepage": "https://github.com/nfroidure/ftp-service#readme",
  "dependencies": {
    "basic-ftp": "^5.0.5",
    "common-services": "^17.1.2",
    "generic-pool": "^3.9.0",
    "knifecycle": "^19.1.3",
    "yerror": "^8.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.12.11",
    "@swc/helpers": "^0.5.17",
    "@swc/jest": "^0.2.39",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.1",
    "jest": "^30.0.4",
    "jsarch": "^6.2.1",
    "jsdoc-to-markdown": "^9.1.1",
    "metapak": "^6.0.4",
    "metapak-nfroidure": "20.0.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0"
  },
  "contributors": [],
  "engines": {
    "node": ">=22.16.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "greenkeeper": {
    "ignore": [
      "commitizen",
      "cz-conventional-changelog",
      "conventional-changelog-cli",
      "eslint",
      "prettier",
      "eslint-config-prettier",
      "eslint-plugin-prettier",
      "typescript-eslint",
      "typescript",
      "rimraf",
      "@swc/cli",
      "@swc/core",
      "@swc/helpers",
      "jest",
      "@swc/jest",
      "jsdoc-to-markdown",
      "jsarch"
    ]
  },
  "jest": {
    "coverageReporters": [
      "lcov"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "@swc/jest",
        {}
      ]
    },
    "testEnvironment": "node",
    "moduleNameMapper": {
      "(.+)\\.js": "$1"
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "prettierPath": null
  },
  "files": [
    "dist/**/*.js",
    "dist/index.d.ts",
    "dist",
    "src",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "prettier": {
    "semi": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  },
  "jsarch": {
    "parserOptions": {
      "plugins": [
        "typescript"
      ]
    }
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/nfroidure"
  }
}
